{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}

<div class="container mx-auto">
    <h1 class="text-2xl font-bold mb-4 flex justify-center">Radompage</h1>
    <button href="{{ path('app_homepage') }}" class="mr-4 bg-blue-500 text-white px-4 py-2 rounded mb-4">Torna in home</button>

    <div class="grid grid-cols-3 gap-4">
        {% for randomImage in randomImages %}
        <div class="border p-4">
            <img src="{{ randomImage.image }}" alt="Image" class="mb-2">
            <h5 class="text-lg font-bold mb-2">{{ randomImage.title }}</h5>
            <p class="text-gray-600">{{ randomImage.date|date('d/m/Y') }}</p>
        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}